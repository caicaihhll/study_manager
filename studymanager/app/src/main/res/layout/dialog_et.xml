<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="10dp"
        android:gravity="center_vertical"
        android:paddingVertical="30dp">

        <EditText
            android:id="@+id/et_dialog_search"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginHorizontal="5dp"
            android:background="@drawable/bg_login_edit"
            android:hint="输入内容进行修改"
            android:inputType="number"
            android:singleLine="true"
            android:textColor="#333333"
            android:textColorHint="#999999"
            android:paddingVertical="10dp"
            android:textSize="12sp"
            android:paddingHorizontal="5dp"></EditText>

        <TextView
            android:id="@+id/tv_dialog_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:inputType="number"
            android:background="@drawable/bg_button_login_yes"
            android:text="确认修改"
            android:textColor="@color/white"
            android:paddingVertical="10dp"
            android:paddingHorizontal="5dp"></TextView>
    </LinearLayout>
</layout>